<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ittx.android1601.LoginActivity">

    <TextView
        android:id="@+id/login_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name" />

    <EditText
        android:id="@+id/login_username_edit"
        android:layout_toRightOf="@id/login_username_txt"
        android:layout_toEndOf="@id/login_username_txt"
        android:layout_alignBaseline="@id/login_username_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_username_txt"
        android:text="@string/password" />

    <EditText
        android:id="@+id/login_pasword_edit"
        android:layout_below="@id/login_username_txt"
        android:layout_toRightOf="@id/login_password_txt"
        android:layout_alignLeft="@id/login_username_edit"
        android:layout_alignStart="@id/login_username_edit"
        android:layout_toEndOf="@id/login_username_txt"
        android:layout_marginTop="20dp"
        android:layout_alignBaseline="@id/login_password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"/>

    <Button
        android:id="@+id/login_login_btn"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_button_chatfrome_selector"
        android:text="@string/login_name"/>
</RelativeLayout>

